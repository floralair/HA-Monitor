<configuration>


  <property>
    <name>mapred.map.tasks</name>
    <value>4</value>
  </property>

  <property>
    <name>mapred.reduce.tasks</name>
    <value>4</value>
  </property>

  <property>
    <name>bulkjob.output.dir</name>
    <description>base directory for all MR jobs submitted</description>
    <value>${user.name}/bulkjob</value>
  </property>


  <property>
    <name>fileusingjobrunner.purge.output.dir</name>
    <description>Should the output directory be purged of
      all files and child directories.
    </description>
    <value>true</value>
  </property>

  <property>
    <name>fileusingjobrunner.input.rows</name>
    <description>Number of rows of data to generate. This
      is per job, not across all jobs
    </description>
    <value>50</value>
  </property>


  <property>
    <name>fileusingmapper.probability</name>
    <description>Probability of a file operation</description>
    <value>1.0</value>
  </property>

  <property>
    <name>fileusingmapper.delay</name>
    <description>Sleep time on operations in millis</description>
    <value>100</value>
  </property>

  <property>
    <name>fileusingmapper.path</name>
    <description>path to query</description>
    <value>/</value>
  </property>

  <property>
    <name>fileusingreducer.probability</name>
    <description>Probability of a file operation</description>
    <value>1.0</value>
  </property>

  <property>
    <name>fileusingreducer.delay</name>
    <description>Sleep time on operations in millis</description>
    <value>1000</value>
  </property>

  <property>
    <name>fileusingreducer.path</name>
    <description>path to query</description>
    <value>/</value>
  </property>


  <property>
    <name>dfs.client.retry.max</name>
    <value>10</value>
  </property>

  <property>
    <name>dfs.client.retry.policy.enabled</name>
    <value>true</value>
  </property>

</configuration>